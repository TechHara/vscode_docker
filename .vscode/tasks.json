{
    "tasks": [
        {
            "type": "shell",
            "label": "clean",
            "command": "rm",
            "args": [
                "-rf",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "cmake",
            "command": "cmake",
            "args": [
                "-Bbuild",
                "-DCMAKE_C_FLAGS=-g"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "build",
            "command": "make",
            "args": [
                "-Cbuild"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": []
        }
    ],
    "version": "2.0.0"
}